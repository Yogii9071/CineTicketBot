<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/modern_backgorund">


    <LinearLayout
        android:id="@+id/dotContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <View
            android:id="@+id/dotLeft"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_shape" />

        <View
            android:id="@+id/dotMid"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_shape" />

        <View
            android:id="@+id/dotRight"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_shape" />
    </LinearLayout>

    <!-- 4 DOTS (Initially hidden) -->
    <LinearLayout
        android:id="@+id/fourDotContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <View
            android:id="@+id/dot1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_shape" />

        <View
            android:id="@+id/dot2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_shape" />

        <View
            android:id="@+id/dot3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_shape" />

        <View
            android:id="@+id/dot4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_shape" />
    </LinearLayout>

    <!-- LEFT PERSON -->
    <ImageView
        android:id="@+id/leftPerson"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person"
        android:layout_centerInParent="true"
        android:layout_marginEnd="100dp"
        android:visibility="invisible" />

    <!-- RIGHT MASCOT -->
    <ImageView
        android:id="@+id/rightMascot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_mascot"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:visibility="invisible" />

    <!-- LEFT BUBBLE ABOVE PERSON -->
    <ImageView
        android:id="@+id/bubbleTicket"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bubble"
        android:padding="12dp"
        android:src="@drawable/ic_ticket2"
        android:layout_above="@id/leftPerson"
        android:layout_marginBottom="20dp"
        android:layout_alignStart="@id/leftPerson"
        android:visibility="invisible" />

    <!-- RIGHT BUBBLE ABOVE MASCOT -->
    <FrameLayout
        android:id="@+id/bubbleCinema"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/rightMascot"
        android:layout_alignStart="@id/rightMascot"
        android:visibility="invisible">

        <!-- Bubble Background -->
        <ImageView
            android:id="@+id/bubbleBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bubble"
            android:scaleType="fitXY" />

        <!-- Center Holder -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/clapperInsideBubble"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/clapper" />
        </LinearLayout>

    </FrameLayout>


    <!-- FINAL CINEMA LOGO -->
    <ImageView
        android:id="@+id/cinemaFinal"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:src="@drawable/cinema"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cinemaFinal"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/kaushan_script"
        android:text="Cine Ticket Bot"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>